{
    "name": "Impersonate",
    "description": "As a spirit, you can possess the bodies of other creatures. While in a body you lose hunger constantly, but hostile creatures will become passive towards you.",
    "type": "origins:multiple",
    "bool": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "hud_render": {
            "should_render": false
        }
    },
    "createteam": {
        "type": "origins:action_on_callback",
        "entity_action_chosen": {
            "type": "origins:execute_command",
            "command": "team add LoveSpirit"
        },
        "execute_chosen_when_orb": true
    },
    "addplayer": {
        "type": "origins:action_on_callback",
        "entity_action_chosen": {
            "type": "origins:execute_command",
            "command": "team join LoveSpirit @s"
        },
        "entity_action_lost": {
            "type": "origins:execute_command",
            "command": "team leave @s"
        },
        "execute_chosen_when_orb": true
    },
    "active": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "tp @e[tag=SpiritBody,limit=1] ~ ~ ~ ~ ~"
                },
                {
                    "type": "origins:execute_command",
                    "command": "team join LoveSpirit @e[type=!minecraft:player,type=!minecraft:ender_dragon,type=!minecraft:wither,distance=..8]"
                }
            ]
        },
        "interval": 1,
        "condition": {
            "type": "origins:resource",
            "resource": "tideorigins:*_bool",
            "comparison": "==",
            "compare_to": 1
        }
    },
