{
    "name": "Postmortem",
    "description": "You're a natural denizen of the afterlife, so items that interact with respawning such as Totems and Respawn Anchors do not work for you.",
    "type": "origins:multiple",
    "droptotemmain": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:equipped_item_action",
                    "equipment_slot": "mainhand",
                    "action": {
                        "type": "origins:consume",
                        "amount": 1
                    }
                },
                {
                    "type": "origins:execute_command",
                    "command": "/summon item ^ ^0.5 ^2 {Item:{id:'minecraft:totem_of_undying',Count:1b}}"
                }
            ]
        },
        "interval": 5,
        "condition": {
            "type": "origins:equipped_item",
            "equipment_slot": "mainhand",
            "item_condition": {
                "type": "origins:ingredient",
                "ingredient": {
                "item": "minecraft:totem_of_undying"
                }
            }
        }
    },
    "droptotemoff": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:equipped_item_action",
                    "equipment_slot": "offhand",
                    "action": {
                        "type": "origins:consume",
                        "amount": 1
                    }
                },
                {
                    "type": "origins:execute_command",
                    "command": "/summon item ~ ~ ~ {Item:{id:'minecraft:totem_of_undying',Count:1b}}"
                }
            ]
        },
        "interval": 5,
        "condition": {
            "type": "origins:equipped_item",
            "equipment_slot": "offhand",
            "item_condition": {
                "type": "origins:ingredient",
                "ingredient": {
                "item": "minecraft:totem_of_undying"
                }
            }
        }
    },
    "blocks": {
        "type": "origins:prevent_block_use",
        "block_condition": {
            "type": "origins:or",
            "conditions": [
                {
                    "type": "origins:block",
                    "block": "minecraft:respawn_anchor"
                },
                {
                    "type": "origins:block",
                    "block": "betternether:pig_statue_respawner"
                }
            ]
        }
    }
}